<!DOCTYPE html>
<html>
  <head>
    <title>MyEnginifiedApp</title>
    <%= stylesheet_link_tag    'core/application', media: 'all' %>
    <%= javascript_include_tag 'core/application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <%= render 'layouts/core/navbar' %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2 col-sm-offset-1">
        </div>
        <div class="col-sm-6 ">
          <% flash.each do |name, msg| %>
            <% if msg.is_a?(String) %>
              <div class="alert alert-dismissable alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= content_tag :div, msg.html_safe, :id => "flash_#{name}" %>
              </div>
            <% end %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>


  </body>
</html>
